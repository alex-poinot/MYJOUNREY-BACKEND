# Configuration pour l'environnement de PRODUCTION
NODE_ENV=production
PORT=3000

# Base de données SQL Server - PRODUCTION
DB_HOST=sql-server-prod.company.com
DB_PORT=1433
DB_USER=myjourney_prod_user
DB_PASSWORD=VeryStrongProductionPassword456!
DB_NAME=MyJourney_Production

# Configuration des logs - PRODUCTION
LOG_LEVEL=warn
LOG_MAX_SIZE=100m
LOG_MAX_FILES=90d

# URLs et domaines - PRODUCTION
FRONTEND_URL=https://myjourney.company.com
API_BASE_URL=https://api-myjourney.company.com

# Sécurité - PRODUCTION
CORS_ORIGIN=https://myjourney.company.com
JWT_SECRET=production-jwt-secret-key-very-secure

# Monitoring - PRODUCTION
ENABLE_MONITORING=true
HEALTH_CHECK_INTERVAL=60000

# Performance - PRODUCTION
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_CONNECTION_TIMEOUT=60000
DB_REQUEST_TIMEOUT=60000